{
    "name": "@fluxo/core",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "start": "turbo run start",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "test": "turbo run test",
        "clean": "turbo run clean",
        "fluxo": "bun apps/cli/bin/cli.js"
    },
    "packageManager": "bun@1.3.3",
    "workspaces": [
        "apps/*",
        "packages/*",
        "plugins/*"
    ],
    "devDependencies": {
        "@fluxo/eslint-config": "workspace:*",
        "eslint": "^9.39.2",
        "prettier": "^3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "turbo": "^2.8.3",
        "@types/bun": "latest"
    },
    "dependencies": {
        "cross-env": "^10.1.0"
    },
    "overrides": {
        "drizzle-orm": "^0.45.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    }
}
